<Window x:Class="Redox.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Redox"
        mc:Ignorable="d"
        Title="Menu" Height="600" Width="800"
        MinWidth="600" MinHeight="600"
        Foreground="White"
        FontFamily="Segoe UI Light" FontSize="28"
        ResizeMode="CanMinimize">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="Assets/Background.png"/>
        </Grid.Background>

        <StackPanel>
            <TextBlock Text="Redox"
                       Margin="20,60,20,20"
                       FontSize="90"
           TextAlignment="Center"/>
            
            <Button  
                Content="Iniciar" 
                Background="LightGreen"
                Padding="5"
                Click="IniciarJuego"
                Margin="20,60,20,20" Width="400" />

            <Button  
                Content="¿Cómo Jugar?" 
                Background="LightGreen"
                Padding="5"
                Click="Opciones_Click"
                Margin="20" Width="400" />

            <Button  
                Content="Salir" 
                Background="LightGreen"
                Padding="5"
                Click="Salir_Click"
                Margin="20" Width="400" />
        </StackPanel>

        <Grid x:Name="Help_Menu"
      Background="#CC000000"
      Visibility="Hidden">
            <Button Content="Regresar"
        Background="LightGreen"
        Padding="5"
        Click="BackMenu_Click" Margin="0,0,654,501" RenderTransformOrigin="0.688,0.746"/>
            <StackPanel>
                <TextBlock Text="¿Cómo Jugar?"
                           FontSize="48"
                           TextAlignment="Center" Margin="0,10,0,0" Width="344"/>

                <TextBlock x:Name="Help_Exp_1"
                           Text="Prueba tus habilidades al completar las lineas y obtener aumentos o reducciones de velocidad en base a tu puntaje ¡Suerte!"
                           
                           FontSize="28"
                           TextAlignment="Center" TextWrapping="WrapWithOverflow" Margin="0,30,0,20"/>

                <TextBlock Text="Controles"
           FontSize="48"
           TextAlignment="Center"/>

                <TextBlock x:Name="Controles"
           Text="Right: Mueve la pieza a la derecha
                                                            Left: Mueve la pieza a la izquierda
                                                            Up: Gira la pieza a la derecha
                                                            Down: Mueve la pieza hacia abajo
                                                            Space: Baja la pieza al instante
                                                                 Z: Gira la pieza a la izquierda
                                                                 C: Intercambia y guarda la pieza"
           
           FontSize="28"
           TextAlignment="Center" Height="299" TextWrapping="WrapWithOverflow" Margin="0,20,0,0"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
